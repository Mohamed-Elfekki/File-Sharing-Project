@model FileSharingProject.Models.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}
<section id="mu-contact">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="mu-contact-area" style="padding-top:0px">
                    <!-- Title -->
                    <div class="row">
                        <div class="col-md-12">
                            <div class="mu-title">
                                <h2>Register</h2>
                            </div>
                        </div>
                    </div>
                    <!-- Start Contact Content -->
                    <div class="mu-contact-content">
                        <div class="row">

                            <div class="col-md-12">
                                <div class="mu-contact-form-area">
                                    <div id="form-messages"></div>
                                    <form id="contact" method="post" class="mu-contact-form" asp-action="Register" asp-controller="Account" asp-route-ReturnUrl="@Context.Request.Query["ReturnUrl"]">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                                        <div class="form-group">
                                            <span class="fa fa-user mu-contact-icon"></span>
                                            <input asp-for="FirstName" type="text" class="form-control" placeholder="First Name" id="name" required>
                                            <span asp-validation-for="FirstName" class="field-validation-error"></span>
                                        </div>
                                        <div class="form-group">
                                            <span class="fa fa-user mu-contact-icon"></span>
                                            <input asp-for="LastName" type="text" class="form-control" placeholder="LastName" id="name" required>
                                            <span asp-validation-for="LastName" class="field-validation-error"></span>
                                        </div>

                                        <div class="form-group">
                                            <span class="fa fa-user mu-contact-icon"></span>
                                            <input asp-for="Email" type="email" class="form-control" placeholder="Enter Your Email" id="name" required>
                                            <span asp-validation-for="Email" class="field-validation-error"></span>
                                        </div>

                                        <div class="form-group">
                                            <span class="fa fa-envelope mu-contact-icon"></span>
                                            <input asp-for="Password" type="password" class="form-control" placeholder="Enter Password" id="email" required>
                                            <span asp-validation-for="Password" class="field-validation-error"></span>
                                        </div>


                                        <div class="form-group">
                                            <span class="fa fa-envelope mu-contact-icon"></span>
                                            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password" id="email" required>
                                            <span asp-validation-for="ConfirmPassword" class="field-validation-error"></span>
                                        </div>


                                        <button type="submit" class="mu-send-msg-btn"><span>Register</span></button>
                                    </form>
                                </div>
                            </div>

                        </div>
                    </div>
                    <!-- End Contact Content -->
                </div>
            </div>
        </div>
    </div>
</section>






@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }


