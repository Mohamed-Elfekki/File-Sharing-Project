@model FileSharingProject.Models.ChangePasswordViewModel


<section id="mu-contact">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="mu-contact-area" style="padding-top:0px">
                    <!-- Title -->
                    <div class="row">
                        <div class="col-md-12">
                            <div class="mu-title">
                                <h2>Change Password</h2>
                            </div>
                        </div>
                    </div>
                    <!-- Start Contact Content -->
                    <div class="mu-contact-content">
                        <div class="row">

                            <div class="col-md-12">
                                <div class="mu-contact-form-area">
                                    <div id="form-messages"></div>
                                    <form id="contact" method="post" class="mu-contact-form" asp-action="ChangePassword" asp-controller="Account">
                                        <div class="form-group">
                                            <span class="fa fa-user mu-contact-icon"></span>
                                            <input asp-for="CurrentPassword" type="password" class="form-control" placeholder="Current Password" id="name" required>
                                            <span asp-validation-for="CurrentPassword"></span>
                                        </div>
                                        <div class="form-group">
                                            <span class="fa fa-user mu-contact-icon"></span>
                                            <input asp-for="NewPassword" type="password" class="form-control" placeholder="New Password" id="name" required>
                                            <span asp-validation-for="NewPassword"></span>
                                        </div>

                                        <div class="form-group">
                                            <span class="fa fa-user mu-contact-icon"></span>
                                            <input asp-for="ConfirmNewPassword" type="password" class="form-control" placeholder="Confirm Password" id="name" required>
                                            <span asp-validation-for="ConfirmNewPassword"></span>
                                        </div>

                                        <button type="submit" class="mu-send-msg-btn"><span>Submit</span></button>
                                    </form>
                                </div>
                            </div>

                        </div>
                    </div>
                    <!-- End Contact Content -->
                </div>
            </div>
        </div>
    </div>
</section>
