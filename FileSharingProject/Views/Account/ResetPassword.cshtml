@model FileSharingProject.Models.ResetPasswordViewModel

@{
    ViewData["Title"] = "Reset Password";
}


<section id="mu-contact">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="mu-contact-area" style="padding-top:0px">
                    <!-- Title -->
                    <div class="row">
                        <div class="col-md-12">
                            <div class="mu-title">
                                <h2>Reset Password</h2>
                            </div>
                        </div>
                    </div>
                    <!-- Start Contact Content -->
                    <div class="mu-contact-content">
                        <div class="row">

                            <div class="col-md-12">
                                <div class="mu-contact-form-area">
                                    <div id="form-messages"></div>
                                    <form id="contact" method="post" class="mu-contact-form" asp-action="ResetPassword" asp-controller="Account">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="form-group">
                                            <span class="fa fa-user mu-contact-icon"></span>
                                            <input asp-for="NewPassword" type="password" class="form-control" placeholder="Enter New Password" id="name" required>
                                            <span asp-validation-for="NewPassword" class="field-validation-error"></span>
                                        </div>

                                        <div class="form-group">
                                            <span class="fa fa-user mu-contact-icon"></span>
                                            <input asp-for="ConfirmNewPassword" type="password" class="form-control" placeholder="Enter New Password" id="name" required>
                                            <span asp-validation-for="ConfirmNewPassword" class="field-validation-error"></span>
                                        </div>

                                        <input type="hidden" asp-for="Token" value="@Context.Request.Query["Token"]" />
                                        <input type="hidden" asp-for="Email" value="@Context.Request.Query["Email"]" />


                                        <button type="submit" class="mu-send-msg-btn"><span>Restore</span></button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- End Contact Content -->
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
