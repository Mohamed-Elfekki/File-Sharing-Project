@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1> Search Files</h1>
    <br />
    <div class="container">
        <div class="row justify-content-md-center">
            <div class="col-md-8">
                <form asp-controller="Uploads" asp-action="Results">
                    <div class="input-group input-group-lg mb-3">
                        <input type="text" class="form-control" name="Term" placeholder="File name" aria-label="Recipient's username" aria-describedby="button-addon2">
                        <button class="btn btn-outline-primary" type="submit" id="button-addon2">Search</button>
                    </div>
                </form>

            </div>
            <div class="col-md-12 text-center" style="margin-top:40px">
                <h2>Popular Downloads</h2>
                <hr />
                <table class="table">
                    <tbody>
                        @foreach (UploadViewModel item in ViewBag.Popular)
                        {
                            <tr>
                                <td>
                                    @if (item.ContentType.ToLower().StartsWith("image/"))
                                    {
                                        <img src="/Uploads/@item.FileName" alt="Alternate Text" width="100" height="100" class="img-thumbnail" />
                                    }
                                </td>
                                <td>@item.OriginalFileName</td>
                                <td>Downloads: @item.DownloadCount</td>

                            </tr>

                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>
